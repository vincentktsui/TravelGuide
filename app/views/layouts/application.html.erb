<!DOCTYPE html>
<html>
  <head>
    <title>TripAdvisorClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['MAPS_API_KEY']}" %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.avatarURL = "<%= image_url('avatar.jpg') %>";
      window.loginURL = "<%= image_url('login.svg') %>";
      window.logoURL = "<%= image_url('logo.svg') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
